---
import Gallifreyan from "../components/Gallifreyan.astro";
import YouTubeLink from "../components/socials/YouTubeLink.astro";
import GitHubLink from "../components/socials/GitHubLink.astro";
import LanguageSwitch from "../components/LanguageSwitch.astro"
import "../styles/style.css";
---

<html lang="en" style="background: black">
    <head>
        <meta charset="utf-8"/>
        <link rel="icon" type="image/svg+xml" href="/favicon.svg"/>
        <meta name="viewport" content="width=device-width"/>
        <meta name="generator" content={Astro.generator}/>
        <title>Connor Bell GitHub</title>
        <link href='https://fonts.googleapis.com/css?family=Noto Sans' rel='stylesheet'>
        <link href='https://fonts.googleapis.com/css?family=Noto Sans JP' rel='stylesheet'>

        <link rel="stylesheet"
              href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200"/>

    </head>
    <body>
        <Gallifreyan />

        <h1 data-text="NAME" style="position: absolute; top:1vh; left:1vw; font-size:3vh"></h1>
        <LanguageSwitch/>

        <div id="left-box" style="position: absolute; width: 20vw; height: 80vh; left:2.5vw; top: 10vh;">
            <div class="expanding-box">
                <h1 data-text="LINKS"></h1>
                <hr style="margin-bottom: 0;">
                <div>
                    <YouTubeLink />
                    <GitHubLink />
                </div>
            </div>
        </div>

        <div id="right-box" style="position: absolute; width: 20vw; height: 80vh; left:77.5vw; top: 10vh;">
            <div class="expanding-box" id="right-box-inside">
                <h1 data-text="PROJECTS"></h1>
                <!-- TODO add back button here -->
                <hr style="margin-bottom: 0;">
                <div style="display: flex">
                    <div class="content-box hidden-scroll" id="project-box"></div>
                    <div class="details-box" id="details-box" hidden="hidden">
                        <iframe style="width:100%;height:100%;border:0;position: absolute;" id="details-iframe"
                                class="same-origin-iframe"
                                sandbox="allow-scripts allow-same-origin" allowTransparency="true"></iframe>
                    </div>
                </div>
            </div>
        </div>
    </body>
    <script>
        import "../scripts/util.js";
        import "../scripts/projects.js";
        import "../scripts/lang/language.js";
        import {checkURLHash} from "../scripts/interaction.js";

        checkURLHash();
    </script>
</html>
