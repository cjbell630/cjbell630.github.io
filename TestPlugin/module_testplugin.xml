<?xml version="1.0" encoding="UTF-8"?>
<project name="module_testplugin" default="compile.module.testplugin">
  <dirname property="module.testplugin.basedir" file="${ant.file.module_testplugin}"/>
  
  <property name="module.jdk.home.testplugin" value="${project.jdk.home}"/>
  <property name="module.jdk.bin.testplugin" value="${project.jdk.bin}"/>
  <property name="module.jdk.classpath.testplugin" value="${project.jdk.classpath}"/>
  
  <property name="compiler.args.testplugin" value="-encoding UTF-8 -source 11 -target 1.11 ${compiler.args}"/>
  
  <property name="testplugin.output.dir" value="${module.testplugin.basedir}/target/classes"/>
  <property name="testplugin.testoutput.dir" value="${module.testplugin.basedir}/target/test-classes"/>
  
  <path id="testplugin.module.bootclasspath">
    <!-- Paths to be included in compilation bootclasspath -->
  </path>
  
  <path id="testplugin.module.production.classpath">
    <path refid="${module.jdk.classpath.testplugin}"/>
    <path refid="library.maven:_org.spigotmc:spigot-api:1.14.4-r0.1-snapshot.classpath"/>
    <path refid="library.maven:_commons-lang:commons-lang:2.6.classpath"/>
    <path refid="library.maven:_com.google.guava:guava:21.0.classpath"/>
    <path refid="library.maven:_com.google.code.gson:gson:2.8.0.classpath"/>
    <path refid="library.maven:_net.md-5:bungeecord-chat:1.13-snapshot.classpath"/>
    <path refid="library.maven:_org.yaml:snakeyaml:1.23.classpath"/>
    <path refid="library.maven:_org.bukkit:bukkit:1.14.4-r0.1-snapshot.classpath"/>
    
  </path>
  
  <path id="testplugin.runtime.production.module.classpath">
    <pathelement location="${testplugin.output.dir}"/>
    
  </path>
  
  <path id="testplugin.module.classpath">
    <path refid="${module.jdk.classpath.testplugin}"/>
    <pathelement location="${testplugin.output.dir}"/>
    <path refid="library.maven:_org.spigotmc:spigot-api:1.14.4-r0.1-snapshot.classpath"/>
    <path refid="library.maven:_commons-lang:commons-lang:2.6.classpath"/>
    <path refid="library.maven:_com.google.guava:guava:21.0.classpath"/>
    <path refid="library.maven:_com.google.code.gson:gson:2.8.0.classpath"/>
    <path refid="library.maven:_net.md-5:bungeecord-chat:1.13-snapshot.classpath"/>
    <path refid="library.maven:_org.yaml:snakeyaml:1.23.classpath"/>
    <path refid="library.maven:_org.bukkit:bukkit:1.14.4-r0.1-snapshot.classpath"/>
    
  </path>
  
  <path id="testplugin.runtime.module.classpath">
    <pathelement location="${testplugin.testoutput.dir}"/>
    <pathelement location="${testplugin.output.dir}"/>
    <path refid="library.maven:_org.spigotmc:spigot-api:1.14.4-r0.1-snapshot.classpath"/>
    <path refid="library.maven:_commons-lang:commons-lang:2.6.classpath"/>
    <path refid="library.maven:_com.google.guava:guava:21.0.classpath"/>
    <path refid="library.maven:_com.google.code.gson:gson:2.8.0.classpath"/>
    <path refid="library.maven:_net.md-5:bungeecord-chat:1.13-snapshot.classpath"/>
    <path refid="library.maven:_org.yaml:snakeyaml:1.23.classpath"/>
    <path refid="library.maven:_org.bukkit:bukkit:1.14.4-r0.1-snapshot.classpath"/>
    
  </path>
  
  
  <patternset id="excluded.from.module.testplugin">
    <patternset refid="ignored.files"/>
  </patternset>
  
  <patternset id="excluded.from.compilation.testplugin">
    <patternset refid="excluded.from.module.testplugin"/>
  </patternset>
  
  <path id="testplugin.module.sourcepath">
    <dirset dir="${module.testplugin.basedir}">
      <include name="src/main/java"/>
      <include name="src/main/resources"/>
    </dirset>
  </path>
  
  <path id="testplugin.module.test.sourcepath">
    <dirset dir="${module.testplugin.basedir}">
      <include name="src/test/java"/>
    </dirset>
  </path>
  
  
  <target name="compile.module.testplugin" depends="compile.module.testplugin.production,compile.module.testplugin.tests" description="Compile module TestPlugin"/>
  
  <target name="compile.module.testplugin.production" depends="register.custom.compilers" description="Compile module TestPlugin; production classes">
    <mkdir dir="${testplugin.output.dir}"/>
    <javac2 destdir="${testplugin.output.dir}" debug="${compiler.debug}" nowarn="${compiler.generate.no.warnings}" memorymaximumsize="${compiler.max.memory}" fork="true" executable="${module.jdk.bin.testplugin}/javac">
      <compilerarg line="${compiler.args.testplugin}"/>
      <bootclasspath refid="testplugin.module.bootclasspath"/>
      <classpath refid="testplugin.module.production.classpath"/>
      <src refid="testplugin.module.sourcepath"/>
      <patternset refid="excluded.from.compilation.testplugin"/>
    </javac2>
    
    <copy todir="${testplugin.output.dir}">
      <fileset dir="${module.testplugin.basedir}/src/main/java">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
      <fileset dir="${module.testplugin.basedir}/src/main/resources">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
    </copy>
  </target>
  
  <target name="compile.module.testplugin.tests" depends="register.custom.compilers,compile.module.testplugin.production" description="compile module TestPlugin; test classes" unless="skip.tests">
    <mkdir dir="${testplugin.testoutput.dir}"/>
    <javac2 destdir="${testplugin.testoutput.dir}" debug="${compiler.debug}" nowarn="${compiler.generate.no.warnings}" memorymaximumsize="${compiler.max.memory}" fork="true" executable="${module.jdk.bin.testplugin}/javac">
      <compilerarg line="${compiler.args.testplugin}"/>
      <bootclasspath refid="testplugin.module.bootclasspath"/>
      <classpath refid="testplugin.module.classpath"/>
      <src refid="testplugin.module.test.sourcepath"/>
      <patternset refid="excluded.from.compilation.testplugin"/>
    </javac2>
    
    <copy todir="${testplugin.testoutput.dir}">
      <fileset dir="${module.testplugin.basedir}/src/test/java">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
    </copy>
  </target>
  
  <target name="clean.module.testplugin" description="cleanup module">
    <delete dir="${testplugin.output.dir}"/>
    <delete dir="${testplugin.testoutput.dir}"/>
  </target>
</project>