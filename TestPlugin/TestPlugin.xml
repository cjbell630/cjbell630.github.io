<?xml version="1.0" encoding="UTF-8"?>
<project name="testplugin" default="all">
  
  
  <property file="TestPlugin.properties"/>
  <!-- Uncomment the following property if no tests compilation is needed -->
  <!-- 
  <property name="skip.tests" value="true"/>
   -->
  
  <!-- Compiler options -->
  
  <property name="compiler.debug" value="on"/>
  <property name="compiler.generate.no.warnings" value="off"/>
  <property name="compiler.args" value=""/>
  <property name="compiler.max.memory" value="700m"/>
  <patternset id="ignored.files">
    <exclude name="**/*.hprof/**"/>
    <exclude name="**/*.pyc/**"/>
    <exclude name="**/*.pyo/**"/>
    <exclude name="**/*.rbc/**"/>
    <exclude name="**/*.yarb/**"/>
    <exclude name="**/*~/**"/>
    <exclude name="**/.DS_Store/**"/>
    <exclude name="**/.git/**"/>
    <exclude name="**/.hg/**"/>
    <exclude name="**/.svn/**"/>
    <exclude name="**/CVS/**"/>
    <exclude name="**/__pycache__/**"/>
    <exclude name="**/_svn/**"/>
    <exclude name="**/vssver.scc/**"/>
    <exclude name="**/vssver2.scc/**"/>
  </patternset>
  <patternset id="library.patterns">
    <include name="*.war"/>
    <include name="*.swc"/>
    <include name="*.zip"/>
    <include name="*.egg"/>
    <include name="*.ear"/>
    <include name="*.ane"/>
    <include name="*.jar"/>
    <include name="*.klib"/>
  </patternset>
  <patternset id="compiler.resources">
    <exclude name="**/?*.java"/>
    <exclude name="**/?*.form"/>
    <exclude name="**/?*.class"/>
    <exclude name="**/?*.groovy"/>
    <exclude name="**/?*.scala"/>
    <exclude name="**/?*.flex"/>
    <exclude name="**/?*.kt"/>
    <exclude name="**/?*.clj"/>
    <exclude name="**/?*.aj"/>
  </patternset>
  
  <!-- JDK definitions -->
  
  <property name="jdk.bin.11" value="${jdk.home.11}/bin"/>
  <path id="jdk.classpath.11">
    <fileset dir="${jdk.home.11}">
      <include name="../jbr!/java.base"/>
      <include name="../jbr!/java.compiler"/>
      <include name="../jbr!/java.datatransfer"/>
      <include name="../jbr!/java.desktop"/>
      <include name="../jbr!/java.instrument"/>
      <include name="../jbr!/java.logging"/>
      <include name="../jbr!/java.management"/>
      <include name="../jbr!/java.management.rmi"/>
      <include name="../jbr!/java.naming"/>
      <include name="../jbr!/java.net.http"/>
      <include name="../jbr!/java.prefs"/>
      <include name="../jbr!/java.rmi"/>
      <include name="../jbr!/java.scripting"/>
      <include name="../jbr!/java.se"/>
      <include name="../jbr!/java.security.jgss"/>
      <include name="../jbr!/java.security.sasl"/>
      <include name="../jbr!/java.smartcardio"/>
      <include name="../jbr!/java.sql"/>
      <include name="../jbr!/java.sql.rowset"/>
      <include name="../jbr!/java.transaction.xa"/>
      <include name="../jbr!/java.xml"/>
      <include name="../jbr!/java.xml.crypto"/>
      <include name="../jbr!/javafx.base"/>
      <include name="../jbr!/javafx.controls"/>
      <include name="../jbr!/javafx.fxml"/>
      <include name="../jbr!/javafx.graphics"/>
      <include name="../jbr!/javafx.media"/>
      <include name="../jbr!/javafx.swing"/>
      <include name="../jbr!/javafx.web"/>
      <include name="../jbr!/jdk.accessibility"/>
      <include name="../jbr!/jdk.aot"/>
      <include name="../jbr!/jdk.attach"/>
      <include name="../jbr!/jdk.charsets"/>
      <include name="../jbr!/jdk.compiler"/>
      <include name="../jbr!/jdk.crypto.cryptoki"/>
      <include name="../jbr!/jdk.crypto.ec"/>
      <include name="../jbr!/jdk.dynalink"/>
      <include name="../jbr!/jdk.httpserver"/>
      <include name="../jbr!/jdk.internal.ed"/>
      <include name="../jbr!/jdk.internal.jvmstat"/>
      <include name="../jbr!/jdk.internal.le"/>
      <include name="../jbr!/jdk.internal.vm.ci"/>
      <include name="../jbr!/jdk.internal.vm.compiler"/>
      <include name="../jbr!/jdk.internal.vm.compiler.management"/>
      <include name="../jbr!/jdk.jdi"/>
      <include name="../jbr!/jdk.jdwp.agent"/>
      <include name="../jbr!/jdk.jfr"/>
      <include name="../jbr!/jdk.jsobject"/>
      <include name="../jbr!/jdk.localedata"/>
      <include name="../jbr!/jdk.management"/>
      <include name="../jbr!/jdk.management.agent"/>
      <include name="../jbr!/jdk.management.jfr"/>
      <include name="../jbr!/jdk.naming.dns"/>
      <include name="../jbr!/jdk.naming.rmi"/>
      <include name="../jbr!/jdk.net"/>
      <include name="../jbr!/jdk.pack"/>
      <include name="../jbr!/jdk.scripting.nashorn"/>
      <include name="../jbr!/jdk.scripting.nashorn.shell"/>
      <include name="../jbr!/jdk.sctp"/>
      <include name="../jbr!/jdk.security.auth"/>
      <include name="../jbr!/jdk.security.jgss"/>
      <include name="../jbr!/jdk.unsupported"/>
      <include name="../jbr!/jdk.xml.dom"/>
      <include name="../jbr!/jdk.zipfs"/>
    </fileset>
  </path>
  
  <property name="project.jdk.home" value="${jdk.home.11}"/>
  <property name="project.jdk.bin" value="${jdk.bin.11}"/>
  <property name="project.jdk.classpath" value="jdk.classpath.11"/>
  
  
  <!-- Project Libraries -->
  
  <path id="library.maven:_com.google.code.gson:gson:2.8.0.classpath">
    <pathelement location="${path.variable.maven_repository}/com/google/code/gson/gson/2.8.0/gson-2.8.0.jar"/>
  </path>
  
  <path id="library.maven:_com.google.guava:guava:21.0.classpath">
    <pathelement location="${path.variable.maven_repository}/com/google/guava/guava/21.0/guava-21.0.jar"/>
  </path>
  
  <path id="library.maven:_commons-lang:commons-lang:2.6.classpath">
    <pathelement location="${path.variable.maven_repository}/commons-lang/commons-lang/2.6/commons-lang-2.6.jar"/>
  </path>
  
  <path id="library.maven:_net.md-5:bungeecord-chat:1.13-snapshot.classpath">
    <pathelement location="${path.variable.maven_repository}/net/md-5/bungeecord-chat/1.13-SNAPSHOT/bungeecord-chat-1.13-20190406.085523-69.jar"/>
  </path>
  
  <path id="library.maven:_org.bukkit:bukkit:1.14.4-r0.1-snapshot.classpath">
    <pathelement location="${path.variable.maven_repository}/org/bukkit/bukkit/1.14.4-R0.1-SNAPSHOT/bukkit-1.14.4-R0.1-20191122.094116-84.jar"/>
  </path>
  
  <path id="library.maven:_org.spigotmc:spigot-api:1.14.4-r0.1-snapshot.classpath">
    <pathelement location="${path.variable.maven_repository}/org/spigotmc/spigot-api/1.14.4-R0.1-SNAPSHOT/spigot-api-1.14.4-R0.1-20191122.094057-84.jar"/>
  </path>
  
  <path id="library.maven:_org.yaml:snakeyaml:1.23.classpath">
    <pathelement location="${path.variable.maven_repository}/org/yaml/snakeyaml/1.23/snakeyaml-1.23.jar"/>
  </path>
  <!-- Register Custom Compiler Taskdefs -->
  <property name="javac2.home" value="${idea.home}/lib"/>
  <path id="javac2.classpath">
    <fileset dir="${javac2.home}">
      <include name="javac2.jar"/>
      <include name="jdom.jar"/>
      <include name="asm-all*.jar"/>
      <include name="forms-*.jar"/>
    </fileset>
  </path>
  <target name="register.custom.compilers">
    <taskdef name="javac2" classname="com.intellij.ant.Javac2" classpathref="javac2.classpath"/>
    <taskdef name="instrumentIdeaExtensions" classname="com.intellij.ant.InstrumentIdeaExtensions" classpathref="javac2.classpath"/>
  </target>
  
  <!-- Modules -->
  
  
  <!-- Module TestPlugin -->
  
  <dirname property="module.testplugin.basedir" file="${ant.file}"/>
  
  
  <property name="module.jdk.home.testplugin" value="${project.jdk.home}"/>
  <property name="module.jdk.bin.testplugin" value="${project.jdk.bin}"/>
  <property name="module.jdk.classpath.testplugin" value="${project.jdk.classpath}"/>
  
  <property name="compiler.args.testplugin" value="-encoding UTF-8 -source 11 -target 1.11 ${compiler.args}"/>
  
  <property name="testplugin.output.dir" value="${module.testplugin.basedir}/target/classes"/>
  <property name="testplugin.testoutput.dir" value="${module.testplugin.basedir}/target/test-classes"/>
  
  <path id="testplugin.module.bootclasspath">
    <!-- Paths to be included in compilation bootclasspath -->
  </path>
  
  <path id="testplugin.module.production.classpath">
    <path refid="${module.jdk.classpath.testplugin}"/>
    <path refid="library.maven:_org.spigotmc:spigot-api:1.14.4-r0.1-snapshot.classpath"/>
    <path refid="library.maven:_commons-lang:commons-lang:2.6.classpath"/>
    <path refid="library.maven:_com.google.guava:guava:21.0.classpath"/>
    <path refid="library.maven:_com.google.code.gson:gson:2.8.0.classpath"/>
    <path refid="library.maven:_net.md-5:bungeecord-chat:1.13-snapshot.classpath"/>
    <path refid="library.maven:_org.yaml:snakeyaml:1.23.classpath"/>
    <path refid="library.maven:_org.bukkit:bukkit:1.14.4-r0.1-snapshot.classpath"/>
    
  </path>
  
  <path id="testplugin.runtime.production.module.classpath">
    <pathelement location="${testplugin.output.dir}"/>
    
  </path>
  
  <path id="testplugin.module.classpath">
    <path refid="${module.jdk.classpath.testplugin}"/>
    <pathelement location="${testplugin.output.dir}"/>
    <path refid="library.maven:_org.spigotmc:spigot-api:1.14.4-r0.1-snapshot.classpath"/>
    <path refid="library.maven:_commons-lang:commons-lang:2.6.classpath"/>
    <path refid="library.maven:_com.google.guava:guava:21.0.classpath"/>
    <path refid="library.maven:_com.google.code.gson:gson:2.8.0.classpath"/>
    <path refid="library.maven:_net.md-5:bungeecord-chat:1.13-snapshot.classpath"/>
    <path refid="library.maven:_org.yaml:snakeyaml:1.23.classpath"/>
    <path refid="library.maven:_org.bukkit:bukkit:1.14.4-r0.1-snapshot.classpath"/>
    
  </path>
  
  <path id="testplugin.runtime.module.classpath">
    <pathelement location="${testplugin.testoutput.dir}"/>
    <pathelement location="${testplugin.output.dir}"/>
    <path refid="library.maven:_org.spigotmc:spigot-api:1.14.4-r0.1-snapshot.classpath"/>
    <path refid="library.maven:_commons-lang:commons-lang:2.6.classpath"/>
    <path refid="library.maven:_com.google.guava:guava:21.0.classpath"/>
    <path refid="library.maven:_com.google.code.gson:gson:2.8.0.classpath"/>
    <path refid="library.maven:_net.md-5:bungeecord-chat:1.13-snapshot.classpath"/>
    <path refid="library.maven:_org.yaml:snakeyaml:1.23.classpath"/>
    <path refid="library.maven:_org.bukkit:bukkit:1.14.4-r0.1-snapshot.classpath"/>
    
  </path>
  
  
  <patternset id="excluded.from.module.testplugin">
    <patternset refid="ignored.files"/>
  </patternset>
  
  <patternset id="excluded.from.compilation.testplugin">
    <patternset refid="excluded.from.module.testplugin"/>
  </patternset>
  
  <path id="testplugin.module.sourcepath">
    <dirset dir="${module.testplugin.basedir}">
      <include name="src/main/java"/>
      <include name="src/main/resources"/>
    </dirset>
  </path>
  
  <path id="testplugin.module.test.sourcepath">
    <dirset dir="${module.testplugin.basedir}">
      <include name="src/test/java"/>
    </dirset>
  </path>
  
  
  <target name="compile.module.testplugin" depends="compile.module.testplugin.production,compile.module.testplugin.tests" description="Compile module TestPlugin"/>
  
  <target name="compile.module.testplugin.production" depends="register.custom.compilers" description="Compile module TestPlugin; production classes">
    <mkdir dir="${testplugin.output.dir}"/>
    <javac2 destdir="${testplugin.output.dir}" debug="${compiler.debug}" nowarn="${compiler.generate.no.warnings}" memorymaximumsize="${compiler.max.memory}" fork="true" executable="${module.jdk.bin.testplugin}/javac">
      <compilerarg line="${compiler.args.testplugin}"/>
      <bootclasspath refid="testplugin.module.bootclasspath"/>
      <classpath refid="testplugin.module.production.classpath"/>
      <src refid="testplugin.module.sourcepath"/>
      <patternset refid="excluded.from.compilation.testplugin"/>
    </javac2>
    
    <copy todir="${testplugin.output.dir}">
      <fileset dir="${module.testplugin.basedir}/src/main/java">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
      <fileset dir="${module.testplugin.basedir}/src/main/resources">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
    </copy>
  </target>
  
  <target name="compile.module.testplugin.tests" depends="register.custom.compilers,compile.module.testplugin.production" description="compile module TestPlugin; test classes" unless="skip.tests">
    <mkdir dir="${testplugin.testoutput.dir}"/>
    <javac2 destdir="${testplugin.testoutput.dir}" debug="${compiler.debug}" nowarn="${compiler.generate.no.warnings}" memorymaximumsize="${compiler.max.memory}" fork="true" executable="${module.jdk.bin.testplugin}/javac">
      <compilerarg line="${compiler.args.testplugin}"/>
      <bootclasspath refid="testplugin.module.bootclasspath"/>
      <classpath refid="testplugin.module.classpath"/>
      <src refid="testplugin.module.test.sourcepath"/>
      <patternset refid="excluded.from.compilation.testplugin"/>
    </javac2>
    
    <copy todir="${testplugin.testoutput.dir}">
      <fileset dir="${module.testplugin.basedir}/src/test/java">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
    </copy>
  </target>
  
  <target name="clean.module.testplugin" description="cleanup module">
    <delete dir="${testplugin.output.dir}"/>
    <delete dir="${testplugin.testoutput.dir}"/>
  </target>
  
  <target name="init" description="Build initialization">
    <!-- Perform any build initialization in this target -->
  </target>
  
  <target name="clean" depends="clean.module.testplugin" description="cleanup all"/>
  
  <target name="build.modules" depends="init, clean, compile.module.testplugin" description="build all modules"/>
  
  <target name="init.artifacts">
    <property name="artifacts.temp.dir" value="${basedir}/__artifacts_temp"/>
    <property name="artifact.output.testplugin:jar" value="${basedir}/out/artifacts/TestPlugin_jar"/>
    <mkdir dir="${artifacts.temp.dir}"/>
    <property name="temp.jar.path.TestPlugin.jar" value="${artifacts.temp.dir}/TestPlugin.jar"/>
  </target>
  
  <target name="artifact.testplugin:jar" depends="init.artifacts, compile.module.testplugin" description="Build &#39;TestPlugin:jar&#39; artifact">
    <property name="artifact.temp.output.testplugin:jar" value="${artifacts.temp.dir}/TestPlugin_jar"/>
    <mkdir dir="${artifact.temp.output.testplugin:jar}"/>
    <jar destfile="${temp.jar.path.TestPlugin.jar}" duplicate="preserve" filesetmanifest="mergewithoutmain">
      <zipfileset dir="${testplugin.output.dir}"/>
    </jar>
    <copy file="${temp.jar.path.TestPlugin.jar}" tofile="${artifact.temp.output.testplugin:jar}/TestPlugin.jar"/>
  </target>
  
  <target name="build.all.artifacts" depends="artifact.testplugin:jar" description="Build all artifacts">
    <mkdir dir="${artifact.output.testplugin:jar}"/>
    <copy todir="${artifact.output.testplugin:jar}">
      <fileset dir="${artifact.temp.output.testplugin:jar}"/>
    </copy>
    
    <!-- Delete temporary files -->
    <delete dir="${artifacts.temp.dir}"/>
  </target>
  
  <target name="all" depends="build.modules, build.all.artifacts" description="build all"/>
</project>